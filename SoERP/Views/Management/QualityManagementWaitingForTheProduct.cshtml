		<script>
		    var pageSize = 5;//每页显示的记录条数
		    var curPage = 0;  //当前页
		    var lastPage; //最后页
		    var direct = 0; //方向
		    var len; //总行数
		    var page;//总页数
		    var begin;
		    var end;

		    $(document).ready(function display() {
		        len = $("#cks tr").length - 1;//求这个表的总行数（ListData是table的id）
		        if (len < 0) len = 0
		        page = len % pageSize == 0 ? len / pageSize : Math.floor(len / pageSize) + 1;//根据记录条数，计算页数
		        curPage = 1; // 设置当前为第一页
		        displayPage(1);//显示第一页

		        document.getElementById("rowspage").innerHTML = pageSize; // 显示的记录条数
		        document.getElementById("total").innerHTML = len; // 显示数据量
		        document.getElementById("btn0").innerHTML = curPage + "/" + page;// 显示当前多少页

		        $("#FirstPage").click(function firstPage() {
		            curPage = 1;
		            direct = 0;
		            displayPage();
		        });
		        $("#PreviousPage").click(function frontPage() {
		            direct = -1;
		            displayPage();
		        });
		        $("#NextPage").click(function nextPage() {
		            direct = 1;
		            displayPage();
		        });
		        $("#LastPage").click(function lastPage() {
		            curPage = page;
		            direct = 0;
		            displayPage();
		        });
		        $("#btn5").click(function changePage() {
		            curPage = document.getElementById("changePage").value * 1;
		            if (!/^[1-9]\d*$/.test(curPage)) {
		                alert("请输入正整数！");
		                return;
		            }
		            if (curPage > page) {
		                alert("超出数据页面！");
		                return;
		            }
		            direct = 0;
		            displayPage();
		        });
		    });

		    function displayPage() {
		        if (curPage <= 1 && direct == -1) {
		            direct = 0;
		            alert("已经是第一页了！");
		            return;
		        } else if (curPage >= page && direct == 1) {
		            direct = 0;
		            alert("已经是最后一页了！");
		            return;
		        }
		        lastPage = curPage;

		        // 修复当len=1时，curPage计算得0的bug
		        if (len > pageSize) {
		            curPage = ((curPage + direct + len) % len);
		        } else {
		            curPage = 1;
		        }
		        document.getElementById("btn0").innerHTML = curPage + "/" + page; // 显示当前多少页
		        begin = (curPage - 1) * pageSize + 1;// 起始记录号
		        end = begin + 1 * pageSize - 1;    // 末尾记录号
		        if (end > len) end = len;
		        $("#cks tr").hide();// 首先,设置这行为隐藏
		        $("#cks tr").each(function (i) {// 然后，通过条件判断决定本行是否恢复显示
		            if ((i >= begin && i <= end) || i == 0)//显示begin<=x<=end的记录
		                $(this).show();
		        });
		    }
		   

		    $(function () {
		        //日期控件
		        $("#date input").datepicker({
		            language: "zh-CN",

