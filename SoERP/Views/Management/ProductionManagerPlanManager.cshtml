		        ///根据选择的订单id查询订单产品名
		        $("#Orderid").change(function () {
		            //获取选中的订单号
		            var ids = $(this).val();
		            if (ids != 0) {
		                $.ajax({
		                    url: "/Management/Productgoodsbyid",
		                    data:{ids:ids},
		                    dataType: "json",
