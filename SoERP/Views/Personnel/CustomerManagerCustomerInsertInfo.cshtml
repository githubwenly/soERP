@{
    Layout = null;
}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style>
			* {
				margin: 0px;
				padding: 0px;
				list-style: none;
				text-decoration: none;
			}
			
			.customer {
				margin-bottom: 20px;
				padding-top: 10px;
				background-color: #FFF;
				height: 100px;
			}
			
			.customer-manager h3 {
				width: 100px;
				margin-left: 33px;
			}
			
			.customer ul {
				margin-left: 20px;
			}
			
			.heads {
				height:420px;
			}
			.form{
				overflow: hidden;
				height: 420px;
				padding-top:30px;
				padding-left:85px;
			}
			.btns{
				width:600px;
				height: 50px;
				margin: 0px auto;
				overflow: hidden;
				position: relative;
				left:-80px;
				bottom:-20px;
			}
			.login{
				color: #F0AD4E !important;
			}
		</style>
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/style.min.css" rel="stylesheet">
		<script type="text/javascript" src="/js/jquery.min.js"></script>
		<script type="text/javascript" src="/js/bootstrap.min.js"></script>
		<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
		<script>
		    $(function () {
		        $("#submit").click(function () {
		            swal("操作成功！", "该客户数据已添加或更新！", "success");
		        })
		    })
		</script>
		
	</head>

	<body>
		<div class="container-fluid">
			<div class="customer">
				<div class="customer-manager">
					<h3>客户管理</h3>
				</div>
				<ul class="breadcrumb">
					<li>
						<a href="javascript:;">首页</a>
					</li>
					<li>
						<a href="javascript:;">客户管理</a>
					</li>
					<li class="active">添加客户资料</li>
				</ul>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="card heads">
						<div class="card-header ">
							<h4>客户资料</h4>
						</div>
						<div class="form">
							<form role="form" action="~/Personnel/CustomerManagerCustomerInsertInfo" method="post">
								<div class="col-lg-4">
									<div class="form-group">
										<label for="name">客户名称</label>
										<input type="text" class="form-control control-labe" id="Customername" name="Customername" placeholder="请输入客户名称">
									</div>
									<div class="form-group">
										<label for="name">电子邮箱</label>
										<input type="text" class="form-control" id="Email" name="Email" placeholder="请输入电子邮箱">
									</div>
									<div class="form-group">
										<label for="name">客户传真</label>
										<input type="text" class="form-control" id="Fax" name="Fax" placeholder="请输入客户传真">
									</div>
								</div>
								<div class="col-lg-4">
									<div class="form-group">
										<label for="name">电话</label>
										<input type="text" class="form-control" id="Phone" name="Phone" placeholder="请输入电话">
									</div>
									<div class="form-group">
										<label for="name">开户银行</label>
										<input type="text" class="form-control" id="Bank" name="Bank" placeholder="请输入开户银行">
									</div>
									<div class="form-group">
										<label for="name">银行账号</label>
										<input type="text" class="form-control" id="BankId" name="BankId" placeholder="请输入银行账号">
									</div>
								</div>
								<div class="col-lg-4">
									<div class="form-group">
										<label for="name">联系人</label>
										<input type="text" class="form-control" id="Contact" name="Contact" placeholder="请输入联系人">
									</div>
									<div class="form-group">
										<label for="name">客户地址</label>
										<input type="text" class="form-control" id="Address" name="Address" placeholder="请输入客户地址">
									</div>
									<div class="form-group">
										<label for="name">邮政编码</label>
										<input type="text" class="form-control" id="Zip_code" name="Zip_code" placeholder="请输入邮政编码">
									</div>
								</div>
								<div class="form-group btns">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-default login">取消</button>
    </div>
    <div class=" col-sm-8">
      <button type="submit" id="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
							</form>
						</div>
					</div>
				</div>

			</div>
		</div>
	</body>

</html>
